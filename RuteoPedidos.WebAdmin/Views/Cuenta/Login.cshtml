@model LoginVm
@{
    ViewBag.Title = "Login";
    Layout = "_LayoutLogin";
}

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
        <form class="form" method="post" asp-controller="Cuenta" asp-action="Ingresar" id="formLogin">
            
            <div class="card card-login card-hidden">
                <div class="card-header card-header-rose text-center">
                    <h4 class="card-title">Login</h4>
                </div>
                <div class="card-body ">
                    <p class="card-description text-center">Ingrese sus credenciales</p>
                    <span class="bmd-form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">email</i>
                                </span>
                            </div>
                            <input asp-for="Usuario" class="form-control" placeholder="Email...">
                        </div>
                    </span>
                    <span class="bmd-form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">lock_outline</i>
                                </span>
                            </div>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
                        </div>
                    </span>
                </div>
                <br/>
                
                <div class="card-footer justify-content-center">
                    <button type="submit" class="btn btn-rose btn-link btn-lg">Ingresar</button>
                </div>

            </div>
            <div class="alert alert" id="panelErrores" style="display: none">
                
                <span>
                    <div id="divValidadores" asp-validation-summary="All"></div>
                </span>
            </div>
        </form>
        
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $('#formLogin').each(function() {
                var validator = $(this).data('validator');
                if (validator) {
                    validator.settings.showErrors = function(map, errors) {
                        this.defaultShowErrors();
                        if ($('div[data-valmsg-summary=true] li:visible').length) {
                            this.checkForm();
                            if (this.errorList.length) {
                                $(this.currentForm).triggerHandler("invalid-form", [this]);
                                $("#panelErrores").show();
                            }
                            else
                            {
                                $(this.currentForm).resetSummary();
                                $("#panelErrores").hide();
                            }

                        }
                    };
                }
            });

            //Veo si hay errores para ver si debo ocultar el panel
            if ($("#divValidadores").attr('class') === "validation-summary-errors") {
                $("#panelErrores").show();
            }

            $("#formLogin").submit(function(e) {
                var self = this;
                if ($(self).valid() == false) {
                    e.preventDefault();
                    $("#panelErrores").show();
                }
            });
        });

        jQuery.fn.resetSummary = function () {
            var form = this.is('form') ? this : this.closest('form');
            form.find("[data-valmsg-summary=true]")
                .removeClass("validation-summary-errors")
                .addClass("validation-summary-valid")
                .find("ul")
                .empty();
            return this;
        }
    </script>
}
