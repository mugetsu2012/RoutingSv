@model RuteoPedidos.WebAdmin.Models.CrearUsuarioVm
@{
    ViewData["Title"] = "Crear Usuario";
}

<h1>CrearUsuario</h1>

<form asp-controller="Cuenta" asp-action="GuardarUsuario" method="post">
    <label asp-for="IdUsuario">Usuario: </label>
    <input asp-for="IdUsuario" />
    <br />
    <label asp-for="Nombre">Nombre: </label>
    <input asp-for="Nombre" />
    <br />
    <label asp-for="Apellido">Apellido: </label>
    <input asp-for="Apellido" />
    <br />
    <label asp-for="PasswordText">Password: </label>
    <input asp-for="PasswordText" />
    <br />
    <label asp-for="Email">Email: </label>
    <input asp-for="Email" />
    <br />
    <label asp-for="IdCuenta">Codigo Cuenta: </label>
    <input asp-for="IdCuenta" />
    <br />
    <label asp-for="IdMotorista">Codigo Motorista (opcional): </label>
    <input asp-for="IdMotorista" />
    <br />

    <button type="submit">Guardar</button>

</form>
